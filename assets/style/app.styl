// Import Vuetify styling
@require '~vuetify/src/stylus/main.styl'

.page
  @extend .fade-transition


.toolbar
  opacity 1
  transition opacity .25s ease-in-out
  &.hidden
    opacity 0
    pointer-events none

.home-text
  opacity 1
  transform translateX(0%)
  transition opacity 0.5s ease-in-out 0.25s
  &.hidden
    opacity 0
    pointer-events none

.home-icon
  opacity 1
  transition opacity .25s ease-in-out
  &.hidden
    opacity 0
    pointer-events none

.boxy
  background-color rgba(145, 185, 164, 0.5)
  border-radius 10px
  padding 40px 60px
  opacity 1
  transform translateX(0%)
  box-shadow 5px 5px 10px 0px rgba(0,0,0,0.75)
  transition opacity 0.25s ease-in-out, transform 0.25s ease-in-out, box-shadow 0.5s ease-in-out 0.25s
  &.hidden-left
    opacity 0
    transform translateX(200%)
    pointer-events none
    box-shadow none

.services-title
  opacity 1
  transition opacity 0.5s ease-in-out
  &.hidden
    opacity 0
    pointer-events none

.properties-section
  opacity 1
  transition opacity 0.5s ease-in-out
  &.hidden
    opacity 0
    pointer-events none

.thin
  font-weight 300

.thick 
  font-weight 500

.sub-under
  width 160px
  height 2px
  margin 25px auto
  background-color black

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s
}
.fade-enter, .fade-leave-to {
  opacity: 0
}

.icon-flipped
  transform scaleX(-1) scaleY(-1)
  -moz-transform scaleX(-1) scaleY(-1)
  -webkit-transform scaleX(-1) scaleY(-1)
  -ms-transform scaleX(-1) scaleY(-1)

.page-header
  text-shadow 1px 1px 1px #555;

.hero-style
  background-position center
  background-size cover
  height auto
  width auto
  max-width 100%

.prop-card-container
  position relative

.card-overlay
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  height 100%
  width 100%
  opacity .5
  transition .5s ease
  background-color #ddd

.overlay-text
  color black
  position absolute
  padding: 20px;
  top 10%
  left 10%

.prop-card-container:hover .card-overlay
  opacity 0

.prop-carousel 
    height 600px
    max-width 800px
    margin 0 auto
    border 3px solid black
